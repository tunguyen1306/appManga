<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:background="@color/backgroundDetail"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundDetail"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/backgroundDetail"
            android:orientation="vertical">
            <android.support.design.widget.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Base.AppCompat.Responsive"
                android:background="@color/black" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/transparent"
                    android:visibility="invisible"/>


            </android.support.design.widget.AppBarLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backgroundDetail"
                >
            <android.support.v4.view.ViewPager
                android:id="@+id/pager_chap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#80FF0000"
                    android:layout_alignBottom="@id/pager_chap"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtItemCount"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textSize="20dp"
                        android:gravity="right"
                        android:text="1"
                        android:textColor="#ffffff" />
                    <TextView
                        android:id="@+id/txtCountDetailChap"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#ffffff" />


                </LinearLayout>
            </RelativeLayout>
            <com.pixelcan.inkpageindicator.InkPageIndicator
                android:id="@+id/indicator_chap"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="12dp"
                app:animationDuration="320"
                app:currentPageIndicatorColor="@color/greenToolBarBg1"
                app:dotDiameter="8dp"
                app:dotGap="8dp"
                app:pageIndicatorColor="@color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/backgroundDetail"
            android:orientation="vertical">
        </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <!-- Drawer Section -->

</android.support.v4.widget.DrawerLayout>
